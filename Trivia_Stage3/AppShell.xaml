<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Trivia_Stage3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Trivia_Stage3"
    xmlns:views="clr-namespace:Trivia_Stage3.Views"
    FlyoutBehavior="Flyout">
 
        
        <ShellContent 
            Route="LoginPage"
                Title="Login Page"
                IsEnabled="False"
                FlyoutItemIsVisible="False"
                ContentTemplate="{DataTemplate views:LoginPage}"/>
        
        <ShellContent
            Route="ApproveQuestionsPage"
            Title="Approve Quesitons"
            ContentTemplate="{DataTemplate views:ApproveQuestionsPage}" />
        
        <ShellContent
            Route="BestScoresPage"
            Title="Best Scores"
            ContentTemplate="{DataTemplate views:BestScoresPage}" />
        
        <ShellContent 
            Route="UserAdminPage"
            Title="User Admin" 
            ContentTemplate="{DataTemplate views:UserAdminPage}" />
        
        <ShellContent 
            Route="UserQuestionsPage"
            Title="User Questions" 
            ContentTemplate="{DataTemplate views:UserQuestionsPage}" />


</Shell>
